{
  "dashboard": {
    "title": "Customer Domain Monitoring",
    "tags": ["customer", "banking", "cbsa-migration"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Customer API Response Time (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{uri=~\"/api/(status|utility).*\"}[5m]))",
            "legendFormat": "{{uri}}"
          }
        ],
        "type": "graph"
      },
      {
        "id": 2,
        "title": "Customer API Request Rate",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/(status|utility).*\"}[5m])",
            "legendFormat": "{{uri}} - {{method}}"
          }
        ],
        "type": "graph"
      },
      {
        "id": 3,
        "title": "Customer API Error Rate",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/(status|utility).*\",status=~\"5..\"}[5m])",
            "legendFormat": "{{uri}} - {{status}}"
          }
        ],
        "type": "graph"
      }
    ]
  }
}
