{
  "dashboard": {
    "title": "CBSA Migration - Customer Domain",
    "tags": ["cbsa", "customer", "banking"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Customer Operations - Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/status.*\"}[5m])",
            "legendFormat": "{{method}} {{uri}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 2,
        "title": "Customer Operations - Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{uri=~\"/api/status.*\"}[5m]))",
            "legendFormat": "{{method}} {{uri}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket{uri=~\"/api/status.*\"}[5m]))",
            "legendFormat": "{{method}} {{uri}} p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 3,
        "title": "Customer Repository - Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "hikaricp_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "hikaricp_connections_idle",
            "legendFormat": "Idle Connections",
            "refId": "B"
          },
          {
            "expr": "hikaricp_connections_max",
            "legendFormat": "Max Connections",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 4,
        "title": "Customer Service - Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/status.*\",status=~\"5..\"}[5m])",
            "legendFormat": "{{uri}} 5xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/status.*\",status=~\"4..\"}[5m])",
            "legendFormat": "{{uri}} 4xx errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "alert": {
          "name": "High Customer Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "message": "Customer domain error rate exceeds 5%",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 5,
        "title": "Customer Count",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "cbsa_customer_count",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 6,
        "title": "JVM Heap Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "Used Heap",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "Max Heap",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      }
    ]
  }
}
