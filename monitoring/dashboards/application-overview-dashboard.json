{
  "dashboard": {
    "title": "Banking Application Overview",
    "tags": ["banking", "overview", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "legendFormat": "{{uri}} - {{method}}"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "reqps"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time Distribution (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "{{uri}} - p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "{{uri}} - p99"
          }
        ],
        "yaxes": [
          {
            "label": "Response Time",
            "format": "s"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"2..\"}[5m])",
            "legendFormat": "2xx Success"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "reqps"
          }
        ]
      },
      {
        "id": 4,
        "title": "JVM Heap Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "Used Heap"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "Max Heap"
          }
        ],
        "yaxes": [
          {
            "label": "Memory",
            "format": "bytes"
          }
        ]
      },
      {
        "id": 5,
        "title": "Garbage Collection Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum[5m])",
            "legendFormat": "{{action}} - {{cause}}"
          }
        ],
        "yaxes": [
          {
            "label": "GC Time",
            "format": "s"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Threads",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_threads_live_threads",
            "legendFormat": "Live Threads"
          },
          {
            "expr": "jvm_threads_daemon_threads",
            "legendFormat": "Daemon Threads"
          }
        ],
        "yaxes": [
          {
            "label": "Thread Count",
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "hikaricp_connections_active",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "hikaricp_connections_idle",
            "legendFormat": "Idle Connections"
          },
          {
            "expr": "hikaricp_connections_pending",
            "legendFormat": "Pending Connections"
          }
        ],
        "yaxes": [
          {
            "label": "Connections",
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Application Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "process_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "format": "s"
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
